.row
  .small-4.columns.small-centered
    %h2 You must sign in
.row
  .small-4.columns.small-centered= link_to 'Sign in with Facebook', '/users/auth/facebook' , class: [:button]

.row
  .small-4.columns.small-centered
    %strong OR

.row
  .small-6.columns.small-centered 
    = semantic_form_for(resource, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f|
      = f.input :email, :label => t(:your_email)
      %label.label= t :signin_password
      = f.password_field :password, autocomplete: "off" 
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me 
          = f.label :remember_me
      = f.submit 'Sign in without Facebook', :class => [:button]
      .row
        .small-8.small-centered.columns
          .row
            .small-6.columns.text-center
              %p= link_to t(:sign_up), '/users/sign_up'
            .small-6.columns.text-center.end
              %p= link_to t(:forgot_your_password), '/users/password/new'