.row
  .small-12.columns
  
    %h1 Listing tickets

    %table
      %thead
        %tr
          %th Project
          %th #
          %th Name
          %th Date assigned
          %th Status
          %th Resolution
          %th



      %tbody
        - @tickets.each do |ticket|
          %tr{class: [(ticket.status == 2 || ticket.resolution == 2) ? :strikeout : false, ticket.status_line.parameterize.underscore]}
            %td= link_to ticket.project.name, ticket.project
            %td= ticket.id.to_s
            %td= link_to ticket.name, ticket
            %td= ticket.date_requested
            %td= ticket.status_line
            %td= ticket.resolution_line
            %td
              = link_to 'Show', ticket, class: [:button, :tiny]
              - if current_user.has_role?(:admin)                
                = link_to 'Edit', edit_ticket_path(ticket), class: [:button, :tiny , :warning]

    %br

    = link_to 'New Ticket', new_ticket_path, class: [:button]
